{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "types": ["node", "reflect-metadata"],
    "paths": {
      "@pbb/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules"]
}
